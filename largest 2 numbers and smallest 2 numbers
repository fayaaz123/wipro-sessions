package com.gpr.apps;
import java.util.*;
public class minimumandmaximum {
public static void main(String args[]) {
	Scanner sc=new Scanner(System.in);
	int n;System.out.println("enter the array size:");
	n=sc.nextInt();
	int a[]=new int[n];
	for(int i=0;i<n;i++) {
		System.out.println("enter the array element "+(i+1));
		a[i]=sc.nextInt();
	}
      Arrays.sort(a);
	System.out.println("maximum number is "+a[n-1]+" "+a[n-2]);
	System.out.println("minimum number is "+a[0]+" "+a[1]);
}
}
